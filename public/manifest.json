{
  "manifest_version": 3,
  "name": "FocusBoss",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "scripting",
    "declarativeNetRequest",
    "offscreen",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["tab.html", "ui.css", "tab/index.js", "fonts/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
